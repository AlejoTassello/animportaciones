<div data-aos="zoom-in-right" class="bg-gray-50 rounded-lg p-8 shadow-md w-[370px] max-w-2xl mx-auto">
    <h2 class="text-2xl font-bold text-center text-gray-900 mb-6">Estimación de Costo de Importación Aérea</h2>
    
    <div class="space-y-4">
      <div>
        <label for="exw" class="block text-sm font-medium text-gray-500 mb-2">Valor EXW (en USD):</label>
        <input 
          type="number" 
          id="exw" 
          class="w-full px-4 py-3 border rounded-lg border-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent" 
          placeholder="Ingresa valor EXW"
        >
      </div>
      
      <div>
        <label for="pesoBruto" class="block text-sm font-medium text-gray-500 mb-2">Peso Bruto (en Kg):</label>
        <input 
          type="number" 
          id="pesoBruto" 
          class="w-full px-4 py-3 border rounded-lg border-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent" 
          placeholder="Ingresa peso bruto"
        >
      </div>
      
      <div>
        <label for="pesoVolumetrico" class="block text-sm font-medium text-gray-500 mb-2">Peso Volumétrico (en m³):</label>
        <input 
          type="number" 
          id="pesoVolumetrico" 
          class="w-full px-4 py-3 border rounded-lg border-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent" 
          placeholder="Ingresa peso volumétrico"
        >
      </div>
      
      <div class="pt-2">
        <button 
          onclick="calcularCosto()" 
          class="w-full px-6 py-3 bg-black border border-black rounded-lg text-white font-medium hover:bg-gray-50 hover:text-black hover:border hover:border-black transition-colors"
        >
          Calcular
        </button>
      </div>
    </div>
  
    <div id="resultado" class="mt-8 bg-gray-100 p-6 shadow-inner" style="display: none;">
      <h3 class="text-xl font-semibold mb-4 text-gray-900">Resultados</h3>
      
      <div class="space-y-3">
        <div class="flex justify-between border-b border-gray-200 pb-2">
          <span class="text-gray-700">FOB:</span>
          <span id="fob" class="font-medium text-gray-900"></span>
        </div>
        
        <div class="flex justify-between border-b border-gray-200 pb-2">
          <span class="text-gray-700">CIF:</span>
          <span id="cif" class="font-medium text-gray-900"></span>
        </div>
        
        <div class="flex justify-between border-b border-gray-200 pb-2">
          <span class="text-gray-700">Derechos de Importación:</span>
          <span id="derechosImportacion" class="font-medium text-gray-900"></span>
        </div>
        
        <div class="flex justify-between border-b border-gray-200 pb-2">
          <span class="text-gray-700">IVA CF:</span>
          <span id="ivaCf" class="font-medium text-gray-900"></span>
        </div>
        
        <div class="flex justify-between border-b border-gray-200 pb-2">
          <span class="text-gray-700">IVA Adicional:</span>
          <span id="ivaAdicional" class="font-medium text-gray-900"></span>
        </div>
        
        <div class="flex justify-between border-b border-gray-200 pb-2">
          <span class="text-gray-700">Ganancias:</span>
          <span id="ganancias" class="font-medium text-gray-900"></span>
        </div>
        
        <div class="flex justify-between border-b border-gray-200 pb-2">
          <span class="text-gray-700">Ingresos Brutos:</span>
          <span id="ingresosBrutos" class="font-medium text-gray-900"></span>
        </div>
        
        <div class="flex justify-between border-b border-gray-200 pb-2">
          <span class="text-gray-700">Impuesto País:</span>
          <span id="impuestoPais" class="font-medium text-gray-900"></span>
        </div>
        
        <div class="flex justify-between pt-2 text-lg">
          <span class="font-bold text-gray-900">Total con Comisión:</span>
          <span id="totalComision" class="font-bold text-gray-900"></span>
        </div>
      </div>
    </div>
  </div>
    

    <script src="src/scripts/calcular.js" defer></script>