<!-- Swiper CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.css" />

<!-- Swiper JS -->
<script is:inline src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<!-- Initialize Swiper -->
<script is:inline>
  document.addEventListener('DOMContentLoaded', function () {
    new Swiper('.products-swiper', {
      slidesPerView: 1,
      slidesPerView: 'auto',
      spaceBetween: 20,
      loop: true, // ahora el loop es infinito
      autoplay: {
        delay: 5000,
        disableOnInteraction: false,
      },
      breakpoints: {
        640: {
          slidesPerView: 2,
          spaceBetween: 20,
        },
        1024: {
          slidesPerView: 3,
          spaceBetween: 30,
        },
        1280: {
          slidesPerView: 4,
          spaceBetween: 40,
        },
      }
    });
  });
</script>


  <style>
    /* Custom Swiper Styles for Minimalist Design */
    .swiper-button-next,
    .swiper-button-prev {
      color: #000;
      background: white;
      width: 40px;
      height: 40px;
      border-radius: 50%;
      box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
      overflow: hidden;
    }
    
    .swiper-button-next:after,
    .swiper-button-prev:after {
      font-size: 18px;
    }
    
    .swiper-pagination-bullet {
      width: 8px;
      height: 8px;
    }
    
    .swiper-pagination-bullet-active {
      background: #000;
    }
    
    /* Add some space for the pagination */
    .products-swiper {
      padding-bottom: 50px;
    }
  </style>
  
  